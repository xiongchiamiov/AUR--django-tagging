# Contributor: Ryan Coyner <rcoyner@gmail.com>
pkgname=django-tagging
pkgver=0.2.1
pkgrel=2
pkgdesc="A generic tagging application for Django projects"
arch=('i686')
url="http://code.google.com/p/django-tagging/"
license=('MIT')
depends=('python')
source=(http://django-tagging.googlecode.com/files/tagging-$pkgver.zip)
md5sums=('478817d8e3f8d062b54b8d9cdaaa00cd')

build() { 
    cd $srcdir/tagging-$pkgver
    python setup.py build || return 1
    python setup.py install --root=$pkgdir || return 1
    install -D -m644 LICENSE.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
